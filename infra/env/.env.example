# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Meta Ads API
META_TOKEN=your-meta-access-token
META_ACCOUNT_ID=your-meta-ad-account-id
META_AD_ACCOUNT_ID=your-meta-ad-account-id

# TikTok Ads API
TIKTOK_TOKEN=your-tiktok-access-token
TIKTOK_ADVERTISER_ID=your-tiktok-advertiser-id

# Shopify API
SHOPIFY_STORE=your-store-name
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_PASSWORD=your-shopify-password

# Timezone
TZ=America/Toronto

# Optional: Analytics (PostHog/Mixpanel)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com
MIXPANEL_TOKEN=your-mixpanel-token

# Optional: Email Service (SendGrid/AWS SES)
SENDGRID_API_KEY=your-sendgrid-api-key
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Optional: Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
