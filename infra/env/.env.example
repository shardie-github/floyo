# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Meta Ads API
META_TOKEN=your-meta-access-token-here
META_AD_ACCOUNT_ID=act_123456789

# TikTok Ads API
TIKTOK_TOKEN=your-tiktok-access-token-here
TIKTOK_ADVERTISER_ID=1234567890

# Shopify Admin API
SHOPIFY_API_KEY=your-shopify-api-key-here
SHOPIFY_PASSWORD=your-shopify-password-here
SHOPIFY_STORE=your-store-name
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret-here

# Timezone (for scheduling and date calculations)
TZ=America/Toronto

# ETL Configuration
ETL_DRY_RUN=false
ETL_LOG_LEVEL=info

# Optional: External Scheduler Configuration
CRON_ENABLED=false
CRON_SCHEDULE="10 1 * * *"

# Optional: Notification Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Optional: Feature Flags Service
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_API_KEY=your-feature-flags-api-key-here
