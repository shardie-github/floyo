{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Floyo Design Tokens",
  "description": "Canonical design tokens for the Floyo platform",
  "version": "1.0.0",
  "tokens": {
    "colors": {
      "bg": {
        "light": "hsl(0, 0%, 100%)",
        "dark": "hsl(224, 71%, 4%)",
        "cssVar": "--bg"
      },
      "fg": {
        "light": "hsl(224, 71%, 4%)",
        "dark": "hsl(210, 40%, 98%)",
        "cssVar": "--fg"
      },
      "muted": {
        "light": "hsl(220, 14%, 96%)",
        "dark": "hsl(220, 14%, 14%)",
        "cssVar": "--muted"
      },
      "mutedForeground": {
        "light": "hsl(220, 9%, 46%)",
        "dark": "hsl(220, 9%, 65%)",
        "cssVar": "--muted-foreground"
      },
      "card": {
        "light": "hsl(0, 0%, 100%)",
        "dark": "hsl(224, 71%, 4%)",
        "cssVar": "--card"
      },
      "primary": {
        "light": "hsl(221, 83%, 53%)",
        "dark": "hsl(217, 90%, 56%)",
        "cssVar": "--primary"
      },
      "primaryFg": {
        "light": "hsl(210, 40%, 98%)",
        "dark": "hsl(210, 40%, 98%)",
        "cssVar": "--primary-fg"
      },
      "secondary": {
        "light": "hsl(210, 40%, 96%)",
        "dark": "hsl(217, 16%, 18%)",
        "cssVar": "--secondary"
      },
      "secondaryFg": {
        "light": "hsl(222, 47%, 11%)",
        "dark": "hsl(210, 40%, 96%)",
        "cssVar": "--secondary-fg"
      },
      "accent": {
        "light": "hsl(269, 83%, 60%)",
        "dark": "hsl(269, 83%, 62%)",
        "cssVar": "--accent"
      },
      "accentFg": {
        "light": "hsl(210, 40%, 98%)",
        "dark": "hsl(210, 40%, 98%)",
        "cssVar": "--accent-fg"
      },
      "destructive": {
        "light": "hsl(0, 84%, 60%)",
        "dark": "hsl(0, 72%, 50%)",
        "cssVar": "--destructive"
      },
      "destructiveFg": {
        "light": "hsl(210, 40%, 98%)",
        "dark": "hsl(210, 40%, 98%)",
        "cssVar": "--destructive-fg"
      },
      "border": {
        "light": "hsl(214, 32%, 91%)",
        "dark": "hsl(217, 16%, 24%)",
        "cssVar": "--border"
      },
      "ring": {
        "light": "hsl(221, 83%, 53%)",
        "dark": "hsl(217, 90%, 56%)",
        "cssVar": "--ring"
      }
    },
    "spacing": {
      "container": {
        "padding": "1rem",
        "screens": {
          "2xl": "1280px"
        }
      }
    },
    "borderRadius": {
      "base": "14px",
      "lg": "var(--radius)",
      "xl": "calc(var(--radius) + 4px)",
      "2xl": "calc(var(--radius) + 8px)"
    },
    "shadows": {
      "card": "0 6px 24px rgba(0,0,0,0.08)"
    },
    "animations": {
      "inFade": {
        "duration": "160ms",
        "easing": "ease-out",
        "keyframes": {
          "from": { "opacity": "0" },
          "to": { "opacity": "1" }
        }
      },
      "inSlideUp": {
        "duration": "220ms",
        "easing": "ease-out",
        "keyframes": {
          "from": { "transform": "translateY(12px)", "opacity": "0" },
          "to": { "transform": "translateY(0)", "opacity": "1" }
        }
      }
    },
    "typography": {
      "fontFeatureSettings": "\"rlig\" 1, \"calt\" 1",
      "fontSmoothing": "antialiased",
      "textRendering": "optimizeLegibility"
    }
  },
  "aliases": {
    "semantic": {
      "background": "bg",
      "foreground": "fg",
      "muted": "muted",
      "mutedText": "mutedForeground",
      "cardBackground": "card",
      "primaryColor": "primary",
      "primaryText": "primaryFg",
      "secondaryColor": "secondary",
      "secondaryText": "secondaryFg",
      "accentColor": "accent",
      "accentText": "accentFg",
      "errorColor": "destructive",
      "errorText": "destructiveFg",
      "borderColor": "border",
      "focusRing": "ring"
    }
  },
  "sources": {
    "css": "frontend/app/globals.css",
    "tailwind": "frontend/tailwind.config.ts"
  }
}
