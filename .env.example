# Environment
ENVIRONMENT=development  # Options: development, staging, production
NODE_ENV=development

# Database Configuration
# CRITICAL: Replace with your actual database credentials
# NEVER use default credentials in production
DATABASE_URL=postgresql://USERNAME:PASSWORD@localhost:5432/floyo

# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Security
# CRITICAL: Set a strong, random SECRET_KEY in production (minimum 32 characters)
# Generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_USE_STRONG_RANDOM_SECRET_KEY
ENCRYPTION_KEY=CHANGE_ME_USE_STRONG_RANDOM_ENCRYPTION_KEY
SNAPSHOT_ENCRYPTION_KEY=CHANGE_ME_USE_STRONG_RANDOM_SNAPSHOT_KEY

# Billing (Optional - Feature Flag)
ENABLE_BILLING=false
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
RELEASE_WEBHOOK_URL=https://your-webhook-url

# Front-End Enrichment Integrations
# Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
NEXT_PUBLIC_CLARITY_ID=your-clarity-id

# Media / Upload
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=your-uploadcare-key

# Realtime / FOMO
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=us2
NEXT_PUBLIC_ABLY_KEY=your-ably-key

# Search
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-key
NEXT_PUBLIC_MEILI_HOST=https://your-meilisearch.com
NEXT_PUBLIC_MEILI_KEY=your-meilisearch-key

# Security / Bot Protection
NEXT_PUBLIC_HCAPTCHA_SITEKEY=your-hcaptcha-sitekey
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Chat / Support
NEXT_PUBLIC_TIDIO_KEY=your-tidio-key
NEXT_PUBLIC_CRISP_ID=your-crisp-id

# Commerce
NEXT_PUBLIC_LEMONSQUEEZY_STORE=your-store-id
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_ID=your-trustpilot-id

# Incident Management
QUIET_MODE=false

# Performance Budgets
LCP_THRESHOLD=2500
CLS_THRESHOLD=0.1
TBT_THRESHOLD=300
JS_BUDGET=170000

# Cost Caps (USD)
VERCEL_DAILY_LIMIT=10
VERCEL_MONTHLY_LIMIT=300
SUPABASE_DAILY_LIMIT=5
SUPABASE_MONTHLY_LIMIT=150
EXTERNAL_APIS_DAILY_LIMIT=3
EXTERNAL_APIS_MONTHLY_LIMIT=90
