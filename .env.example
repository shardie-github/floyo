# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in values from Supabase
# DO NOT commit .env.local to git (it's gitignored)
#
# For local development:
#   cp .env.example .env.local
#   # Then fill values from Supabase dashboard
#
# For Vercel:
#   vercel env pull .env.local
# ============================================

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string
# Source: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL=

# ============================================
# SUPABASE - Server-side (Required)
# ============================================
# Supabase project URL
# Source: Supabase Dashboard > Settings > API > Project URL
SUPABASE_URL=

# Supabase anonymous key (server-side usage)
# Source: Supabase Dashboard > Settings > API > anon/public key
SUPABASE_ANON_KEY=

# Supabase service role key (server-side only, never expose to client)
# Source: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=

# Supabase JWT secret (optional, for token validation)
# Source: Supabase Dashboard > Settings > API > JWT Secret
SUPABASE_JWT_SECRET=

# ============================================
# SUPABASE - Public (Required)
# ============================================
# Supabase project URL (public, exposed to client)
# Source: Supabase Dashboard > Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=

# Supabase anonymous key (public, exposed to client)
# Source: Supabase Dashboard > Settings > API > anon/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ============================================
# SUPABASE - CLI/Deployment (Optional)
# ============================================
# Supabase CLI access token
# Source: Supabase Dashboard > Account > Access Tokens
SUPABASE_ACCESS_TOKEN=

# Supabase project reference ID
# Source: Supabase Dashboard > Settings > General > Reference ID
SUPABASE_PROJECT_REF=

# ============================================
# VERCEL (Optional - for CI/CD)
# ============================================
# Vercel deployment token
VERCEL_TOKEN=

# Vercel organization ID
VERCEL_ORG_ID=

# Vercel project ID
VERCEL_PROJECT_ID=

# ============================================
# APPLICATION (Optional)
# ============================================
# Node environment
NODE_ENV=development

# Application environment
ENVIRONMENT=development

# Frontend URL (for email links, redirects)
FRONTEND_URL=http://localhost:3000

# Public API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Public site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# SECURITY & SECRETS (Optional)
# ============================================
# Application secret key (for JWT, encryption)
SECRET_KEY=

# Encryption key for snapshots
SNAPSHOT_ENCRYPTION_KEY=

# Cron job secret (for authenticated cron endpoints)
CRON_SECRET=

# Admin basic auth (format: username:password)
ADMIN_BASIC_AUTH=

# ============================================
# PAYMENT PROCESSING (Optional)
# ============================================
# Stripe API key
STRIPE_API_KEY=

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=

# ============================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# PostHog analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Privacy kill switch
PRIVACY_KILL_SWITCH=false
NEXT_PUBLIC_PRIVACY_KILL_SWITCH=false

# Trust features
NEXT_PUBLIC_TRUST_STATUS_PAGE=false
NEXT_PUBLIC_TRUST_HELP_CENTER=false
NEXT_PUBLIC_TRUST_EXPORT=false

# CSP settings
NEXT_PUBLIC_CSP_ENABLED=false
NEXT_PUBLIC_CSP_ALLOWLIST=

# ============================================
# INTEGRATIONS (Optional)
# ============================================
# hCaptcha site key
NEXT_PUBLIC_HCAPTCHA_SITEKEY=

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=

# AWS S3 (for exports)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# ============================================
# REDIS (Optional)
# ============================================
# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Celery broker URL
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# VERCEL CRON (Optional)
# ============================================
# Alternative cron secret name (Vercel-specific)
VERCEL_CRON_SECRET=

# ============================================
# EXTERNAL INTEGRATIONS (Optional - Not Yet Configured)
# ============================================
# TikTok Ads API
TIKTOK_ADS_API_KEY=
TIKTOK_ADS_API_SECRET=

# Meta Ads API
META_ADS_ACCESS_TOKEN=
META_ADS_APP_ID=

# ElevenLabs API
ELEVENLABS_API_KEY=

# AutoDS API
AUTODS_API_KEY=

# CapCut API
CAPCUT_API_KEY=

# Zapier Webhook Secret
ZAPIER_SECRET=

# MindStudio API
MINSTUDIO_API_KEY=

# ============================================
# INFRASTRUCTURE / CI/CD (Optional)
# ============================================
# Alternative Supabase DB URL format
SUPABASE_DB_URL=

# Generic source tokens
GENERIC_SOURCE_A_TOKEN=
GENERIC_SOURCE_B_TOKEN=

# Slack webhook
SLACK_WEBHOOK_URL=

# Timezone
TZ=America/Toronto

# Testing/Development
API_BASE_URL=http://localhost:8000
PROD_URL=https://your-app.vercel.app
PARTNER_HMAC_KEY=

# ============================================
# NEXT.JS CONFIGURATION (Optional)
# ============================================
# ISR revalidation default (seconds)
REVALIDATE_SECONDS=60

# Bundle analyzer (set to 'true' to enable)
ANALYZE=false
